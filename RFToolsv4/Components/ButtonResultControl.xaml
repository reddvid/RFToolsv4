<UserControl
    x:Class="RFToolsv4.Components.ButtonResultControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RFToolsv4.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <Button Content="{Binding}" Style="{StaticResource CalculateButtonStyle}" />
        <StackPanel
            Background="{StaticResource CardBackgroundBrush}"
            CornerRadius="6"
            Style="{StaticResource ResultsCardStyle}">
            <TextBlock Style="{StaticResource CardTitleTextStyle}" Text="Results" />
            <TextBlock
                IsTextSelectionEnabled="True"
                Style="{StaticResource CardResultTextStyle}"
                Text="" />
        </StackPanel>
    </StackPanel>
</UserControl>
