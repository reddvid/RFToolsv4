<Page
    x:Class="RFToolsv4.Views.FreeSpacePathLossPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:RFToolsv4.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RFToolsv4.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel Padding="20,20,20,0" Spacing="12">
                <TextBlock Style="{StaticResource PageTitleTextStyle}" Text="Free-Space Path Loss" />
                <NumberBox Header="Transmitter Gain (dBi):" />
                <NumberBox Header="Receiver Gain (dBi):" />
                <StackPanel Style="{StaticResource TwoElementStackStyle}">
                    <NumberBox Header="Distance:" />
                    <ComboBox Style="{StaticResource UnheaderedComboBoxStyle}" />
                </StackPanel>
                <StackPanel Style="{StaticResource TwoElementStackStyle}">
                    <NumberBox Header="Frequency:" />
                    <ComboBox Style="{StaticResource UnheaderedComboBoxStyle}" />
                </StackPanel>
                <components:ButtonResultControl ButtonContent="Calculate Path Loss" CardResults="" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
